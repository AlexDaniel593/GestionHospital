@model GestionHospital.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesion";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h2 class="text-center text-primary">Iniciar Sesión</h2>
        <form asp-action="Login" method="post">
            <!-- Campo de Email con ícono -->
            <div class="form-group mt-3">
                <label asp-for="Email" class="fw-bold">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-text" style="border-radius: 10px 0 0 10px;">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control" style="border-radius: 0 10px 10px 0;" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo de Password con ícono -->
            <div class="form-group mt-3">
                <label asp-for="Password" class="fw-bold">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text" style="border-radius: 10px 0 0 10px;">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="Password" class="form-control" type="password" style="border-radius: 0 10px 10px 0;" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Checkbox Remember Me -->
            <div class="form-group form-check mt-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Recordarme</label>
            </div>

            <!-- Botón de Login -->
            <button type="submit" class="btn btn-primary w-100 mt-4" style="border-radius: 10px;">
                <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}